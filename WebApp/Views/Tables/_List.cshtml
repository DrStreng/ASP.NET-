@model IEnumerable<WebApp.Models.Table>

@{
    ViewBag.Title = "OrderByLogin";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@if (Session["Admin"] != null)
{
    <div class="section">
        <div id="section_title">@ViewBag.Title</div>
        <div id="section_text">
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>

            <table class="table">
                <tr>
                    <td>@Html.ActionLink("ById", "Index")</td>
                    <td>@Html.ActionLink("ByLogin", "OrderByLogin")</td>
                    <td>@Html.ActionLink("ByEmail", "OrderByEmail")</td>
                    <td>@Html.ActionLink("ByRole", "OrderByRole")</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Login)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Role)</th>
                    <th>Panel Administracyjny</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Login)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Role)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
}
