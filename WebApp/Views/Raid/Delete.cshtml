@model WebApp.Models.Raid

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


@if (Session["Zalogowany"] != null)
{
    <div class="section">
        <div id="section_title">@ViewBag.Title</div>
        <div id="section_text">

            <h3>Are you sure you want to delete this?</h3>

            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.Nazwa)</dt>

                <dd>@Html.DisplayFor(model => model.Nazwa)</dd>

                <dt>@Html.DisplayNameFor(model => model.Lokacja.Nazwa)</dt>

                <dd>@Html.DisplayFor(model => model.Lokacja.Nazwa)</dd>

                <dt>@Html.DisplayNameFor(model => model.Typ.Nazwa)</dt>

                <dd>@Html.DisplayFor(model => model.Typ.Nazwa)</dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div>
                    <input type="submit" value="Delete" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>
}
